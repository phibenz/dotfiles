# Local zsh configuration sample for macOS
# Copy this to ~/.zshrc.local and customize as needed

# Homebrew (macOS)
export PATH="/opt/homebrew/bin:$PATH"

# Add your local bin directory
export PATH="$PATH:$HOME/.local/bin"

